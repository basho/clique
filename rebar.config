{erl_first_files, [
    "src/clique_writer.erl",
    "src/clique_handler.erl"
]}.
{erl_opts, [
    debug_info,
    warnings_as_errors
]}.
{deps, [
    {cuttlefish, ".*", {git, "git://github.com/basho/cuttlefish.git", {branch, "feature/otp-17"}}}
]}.

{cover_enabled, true}.
{edoc_opts, [{preprocess, true}]}.
{eunit_opts, [verbose]}.

{xref_checks, []}.
{xref_queries, [{"(XC - UC) || (XU - X - B - \"(cluster_info|dtrace|mochijson2)\" : Mod)", []}]}.
